vim9script

##
# ::: Fzf :::
#

# Set Fzf key bindings
g:fzf_action = {
  'ctrl-t': 'tab split',
  'ctrl-x': 'split',
  'ctrl-v': 'vsplit'
}

# Set Fzf options
g:fzf_general_options = {
  'window': {
    'width':  0.8,
    'height': 0.9,
    'border': 'sharp'
  },
  'options': '--multi'
}

