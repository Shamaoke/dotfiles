" color scheme settings

" enable 256 colors
" set t_Co=256

" set background
  set background=dark

" enable syntax highlighting
" must be set before `colorscheme'
  syntax on

" set color scheme
  colorscheme default

" ui
highlight ColorColumn       cterm=none ctermfg=none ctermbg=235
highlight CursorColumn      cterm=none ctermfg=none ctermbg=none
