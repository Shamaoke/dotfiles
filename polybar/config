[global/wm]
margin-top    = 0
margin-bottom = 0
# margin-bottom = 18

[bar/sample]
monitor            = LVDS-0
width              = 100%
# width              = 1600
height             = 17
# padding-right      = 2
# padding-left       = 2
  padding-right      = 2
  padding-left       = 1
