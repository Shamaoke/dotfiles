separator          = "  "
modules-left       = ewmh
modules-center     = date
modules-right      = xkeyboard wired-network wireless-network battery volume
enable-ipc         = true

[module/ewmh]
type = internal/xworkspaces

label-active-padding-right = 1
label-empty-padding-right  = 1

label-active-foreground = ${colors.foreground-color}
label-empty-foreground  = ${colors.foreground-alt-color}

[module/date]
type     = internal/date
interval = 1
date     = %Y-%m-%d
# time     = %H:%M:%S
time     = %H:%M
label    = %date% %time%

[module/xkeyboard]
type        = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = caps lock

[module/wired-network]
type               = internal/network
interface          = enp19s0

label-connected    = ++
label-disconnected = --

label-connected-foreground    = #00ff00
label-disconnected-foreground = #ff0000

[module/wireless-network]
type               = internal/network
interface          = wlp7s0

label-connected    = **
label-disconnected = --

label-connected-foreground    = #00ff00
label-disconnected-foreground = #ff0000

[module/battery]
type = internal/battery
full-at = 99

label-full        = bat %percentage%%
label-charging    = bat %percentage%%
label-discharging = bat %percentage%%

