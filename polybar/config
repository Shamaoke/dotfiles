foreground         = ${colors.foreground-color}
border-bottom-size = 1
border-color       = ${colors.border-color}
# font-0             = Afiado:pixelsize=11;2
# font-0             = Dejavu Sans Mono:size=10;1
# font-0             = PT Sans:size=11;1
# font-0             = PT Mono:size=10;1
