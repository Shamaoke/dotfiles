# установить стиль статусной строки
set -g  status-style 'fg=colour7'
set -ag status-style 'bg=colour233'

set -g status-left-style 'fg=colour11,bold'

# установить стиль разделителей панелей
set -g pane-active-border-style 'fg=colour233'
set -g pane-border-style        'fg=colour233'

# установить стиль командной строки
set -g  message-style 'fg=colour15'
set -ag message-style 'bg=colour233'

# установить стиль „модальной строки“ (индикатор режима копирования)
# set -g mode-style 'bg=colour08'
