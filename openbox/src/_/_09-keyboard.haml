  -# Keybindings for window switching
  -# Cycle windows on all desktops
  -# 0x17 — `Tab'
  %keybind{ :key => 'A-0x17' }
    %action{ :name => 'NextWindow' }
      %allDesktops yes
      %bar no
      %finalactions
        %action{ :name => 'Focus' }
        %action{ :name => 'Raise' }
        %action{ :name => 'Unshade' }

  -# 0x17 — `Tab'
  %keybind{ :key => 'A-S-0x17' }
    %action{ :name => 'PreviousWindow' }
      %allDesktops yes
      %bar no
      %finalactions
        %action{ :name => 'Focus' }
        %action{ :name => 'Raise' }
        %action{ :name => 'Unshade' }

  -# Cycle windows on the current desktop
  -# 0x9 — `Escape'
  %keybind{ :key => 'A-0x9' }
    %action{ :name => 'NextWindow' }
      %dialog none
      %bar no
      %interactive no
      %linear yes
      %allDesktops no

  -# 0x9 — `Escape'
  %keybind{ :key => 'A-S-0x9' }
    %action{ :name => 'PreviousWindow' }
      %dialog none
      %bar no
      %interactive no
      %linear yes
      %allDesktops no

