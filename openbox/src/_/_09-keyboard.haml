  -# Alternate keybindings for changing window states
  -# 0x2a — `g'
  %chainQuitKey C-0x2a


  -# 0x1f — `i'
  %keybind{ :key => 'W-0x1f' }
    -# 0x1b — `r'
    %keybind{ :key => '0x1b' }
      %action{ :name => 'Iconify' }

    -# 0x36 — `c'
    %keybind{ :key => '0x36' }
      %action{ :name => 'Close' }

    -# 0x27 — `s'
    %keybind{ :key => '0x27' }
      %action{ :name => 'If'}
        %query
          %maximized no
        %then
          %action{ :name => 'Undecorate' }
          %action{ :name => 'Maximize' }
        %else
          %action{ :name => 'If'}
            %query
              %maximized yes
            %then
              %action{ :name => 'Decorate' }
              %action{ :name => 'Unmaximize' }

    -# 0x29 — `f'
    %keybind{ :key => '0x29' }
      %action{ :name => 'ToggleFullscreen' }

