!!! xml
%openbox_menu{ :xmlns => 'http://openbox.org/3.4/menu' }
  %menu{ :id => 'root', :label => 'openbox' }
    -# the id of the menu will be referenced by a keybind

    %separator{ :label => 'Applications' }

    %item{ :label => 'Firefox' }
      %action{ :name => 'Execute' }
        %command firefox -P default

    %item{ :label => 'Goldendict' }
      %action{ :name => 'Execute' }
        %command goldendict

    %item{ :label => 'MClip' }
      %action{ :name => 'Execute' }
        %command mclip

    %separator

    %item{ :label => 'Log out' }
      %action{ :name => 'Exit' }
        %prompt yes
