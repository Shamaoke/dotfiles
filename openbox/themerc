# ~/.local/share/themes/sample/openbox-3/themerc

# Sample

# Theme for Openbox user interface elements

# Read `http://openbox.org/wiki/Help:Themes' for details

# Window borders
window.*.border.color: #4f2624
border.width: 2

# Window title bar
window.*.title.bg: solid flat
window.*.title.bg.color: #4f2624
padding.width: 3
padding.height: 3

# Window label
window.*.label.bg: solid flat
window.*.label.bg.color: #4f2624
window.*.label.text.color: #ffffff

# Buttons
window.*.button.*.bg: solid flat
window.*.button.*.image.color: #ffffff
window.*.button.*.bg.color: #4f2624

# Title separator (the separator between the title bar and the client)
window.*.title.separator.color: #d68051

# Window content (client)
window.*.client.color: #fd971f
window.client.padding.width: 0
window.client.padding.height: 0

# Window handle
# window.*.handle.bg: solid flat
# window.*.handle.bg.color: #ff0000
# window.*.handle.width: 0
window.*.handle.width: 0

# Window grips
# window.*.grip.bg: solid flat
# window.*.grip.bg.color: #665544

# On-screen display content
# osd.bg: solid flat
# osd.bg.color: #0000ff
osd.border.width: 1
osd.border.color: #baa6ff

# On-screen display label
# osd.label.bg: solid flat
# osd.label.text.color: #00ff00

# Menu header
menu.title.bg: solid flat
menu.title.bg.color: #211d2f
menu.title.text.color: #baa6ff

# Menu element
menu.items.bg: solid flat
menu.items.bg.color: #211d2f
menu.items.text.color: #423b59

# Selected menu element
menu.items.active.bg: solid flat
menu.items.active.bg.color: #211d2f
menu.items.active.text.color: #ecebe1

# Disabled menu element
menu.items.disabled.text.color: #423b59

# Menu separator
menu.separator.color: #423b59
