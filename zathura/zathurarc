" do not display the status bar
  set guioptions ''

" set the auto adjustment mode to be used when a document is loaded
  set adjust-open 'best-fit'

" set the background color
  set default-bg '#101a23'

" set the background color for the index mode
  set index-bg '#101a23'

" set the foreground color for the index mode
  set index-fg '#ffffff'

" set the dark color for the recoloring mode
  set recolor-darkcolor '#ffffff'

" set the light color for the recoloring mode
  set recolor-lightcolor '#101a23'

" define the font will be used
  set font 'Iosevka 13'

" use basenames of opened files in window title (instead of full paths)
  set window-title-basename true

" display page number in window title
" set window-title-page true

" the number of recent files shown in completion
  set show-recent 5

" show hidden files in completion
  set show-hidden true

" show pages count in the title bar
  set window-title-page true
