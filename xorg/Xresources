!run `xrdb -merge ~/.Xresources` in order to reload the config

!-------------!
!    URxvt    !
!-------------!

!#include ".Xresources.d/joy"
#include ".Xresources.d/chinese-pastel"

! set terminal dimensions
  URxvt.geometry: 157x34

! set font Term + Noto Sans Mono CJK JP
! URxvt.font: xft:Iosevka Term:style=Regular:size=13, xft:Noto Sans Mono CJK JP:size=12
! URxvt.boldFont: xft:Iosevka Term:style=Medium:size=13, xft:Noto Sans Mono CJK JP:size=12
! URxvt.italicFont: xft:Iosevka Term:style=Italic:size=13, xft:Noto Sans Mono CJK JP:size=12
! URxvt.boldItalicFont: xft:Iosevka Term:style=Medium Italic:size=13, xft:Noto Sans Mono CJK JP:size=12

! set font Term Extended + Noto Sans Mone CJK JP
! URxvt.font: xft:Iosevka Term Extended:style=Regular:size=13, xft:Noto Sans Mono CJK JP:size=12
! URxvt.boldFont: xft:Iosevka Term Extended:style=Medium:size=13, xft:Noto Sans Mono CJK JP:size=12
! URxvt.italicFont: xft:Iosevka Term Extended:style=Italic:size=13, xft:Noto Sans Mono CJK JP:size=12
! URxvt.boldItalicFont: xft:Iosevka Term Extended:style=Medium Italic:size=13, xft:Noto Sans Mono CJK JP:size=12

!set font Term + IPAexGothic
! URxvt.font: xft:Iosevka Term:style=Regular:size=13, xft:IPAexGothic:size=13
! URxvt.boldFont: xft:Iosevka Term:style=Medium:size=13, xft:IPAexGothic:size=13
! URxvt.italicFont: xft:Iosevka Term=Italic:size=13, xft:IPAexGothic:size=12
! URxvt.boldItalicFont: xft:Iosevka Term:style=Medium Italic:size=13, xft:IPAexGothic:size=13

! set font Term Extended + IPAexGothic
! URxvt.font: xft:Iosevka Term Extended:style=Regular:size=13, xft:IPAexGothic:size=13
! URxvt.boldFont: xft:Iosevka Term Extended:style=Medium:size=13, xft:IPAexGothic:size=13
! URxvt.italicFont: xft:Iosevka Term Extended:style=Italic:size=13, xft:IPAexGothic:size=13
! URxvt.boldItalicFont: xft:Iosevka Term Extended:style=Medium Italic:size=13, xft:IPAexGothic:size=13

! set font Term Slab + IPAexGothic
! URxvt.font: xft:Iosevka Term Slab:style=Regular:size=13, xft:IPAexGothic:size=13
! URxvt.boldFont: xft:Iosevka Term Slab:style=Medium:size=13, xft:IPAexGothic:size=13
! URxvt.italicFont: xft:Iosevka Term Slab:style=Italic:size=13, xft:IPAexGothic:size=13
! URxvt.boldItalicFont: xft:Iosevka Term Slab:style=Medium Italic:size=13, xft:IPAexGothic:size=13

! set font Term Slab Extended + IPAexGothic
! URxvt.font: xft:Iosevka Term Slab Extended:style=Regular:size=13, xft:IPAexGothic:size=13
! URxvt.boldFont: xft:Iosevka Term Slab Extended:style=Medium:size=13, xft:IPAexGothic:size=13
! URxvt.italicFont: xft:Iosevka Term Slab Extended:style=Italic:size=13, xft:IPAexGothic:size=13
! URxvt.boldItalicFont: xft:Iosevka Term Slab Extended:style=Medium Italic:size=13, xft:IPAexGothic:size=13

! set font Custom Term Slab + IPAexGothic
  URxvt.font: xft:Iosevka Custom Term Slab:style=Regular:size=13, xft:IPAexGothic:size=13
  URxvt.boldFont: xft:Iosevka Custom Term Slab:style=Medium:size=13, xft:IPAexGothic:size=13
  URxvt.italicFont: xft:Iosevka Custom Term Slab:style=Italic:size=13, xft:IPAexGothic:size=13
  URxvt.boldItalicFont: xft:Iosevka Custom Term Slab:style=Medium Italic:size=13, xft:IPAexGothic:size=13

! disable high intensity colors for bold text
  URxvt.intensityStyles: false

!do not show a scrollbar
URxvt.scrollBar: false

! set the color of borders around the text area
! in order to see that borders are present
! URxvt.borderColor: #ffcc00

!blink the cursor
URxvt.cursorBlink: true

!hide the mouse pointer when a key is pressed or after a set number of seconds of inactivity
!the number of seconds is determined by the pointerBlankDelay preference (default: 2)
URxvt.pointerBlank: true

! set a number of seconds of inactivity before the mouse pointer will be hidden
! URxvt.pointerBlankDelay: 10

!turn off the Unicode input mode (which is available by pressing Ctrl+Shift)
URxvt.iso14755: false

!set the number of lines in the viewing buffer
URxvt.saveLines: 10000

!move the viewing buffer up and down by 1 line by pressing Ctrl+j/k
!URxvt.keysym.C-k: command:\033]720;1\007
!URxvt.keysym.C-j: command:\033]721;1\007

!move the viewing buffer up and down by 10 lines by pressing Ctrl+Shift+j/k
!URxvt.keysym.C-S-K: command:\033]720;10\007
!URxvt.keysym.C-S-J: command:\033]721;10\007

!disable sending the scrolling controll sequences when pressing Shift+PgUp/PgDown
!send keycodes for Shift+PgUp/PgDown instead
URxvt.keysym.S-Prior: \033[5$
URxvt.keysym.S-Next: \033[6$

!forbid adding lines to viewing buffer when scrolling in
!console applications (e. g. vim)
URxvt.secondaryScroll: false

! do not initialize the perl interpreter
! URxvt.perl-ext:
! URxvt.perl-ext-common:

  URxvt.perl-ext-common: colorize

! set the urgency hint for the WM on receipt of a bell character (\x07)
! this allows to highlight the urgent tab in the suckless tabbed utility
! when this event occurs
  URxvt.urgentOnBell: true

! URxvt.perl-ext-common: rabbit

! URxvt.rabbit: notify-send 'catch me if you can'

! URxvt.perl-ext-common: decolorize,rabbit
! URxvt.perl-ext-common: emit

! URxvt.color232: rgb:06/0a/00
! URxvt.color233: rgb:0d/14/00
! URxvt.color234: rgb:13/1f/01
! URxvt.color235: rgb:19/29/01
! URxvt.color236: rgb:20/33/01
! URxvt.color237: rgb:26/3d/01
! URxvt.color238: rgb:2d/47/01
! URxvt.color239: rgb:33/52/02

! URxvt.perl-ext-common: clock

! URxvt.perl-ext-common: colorize

! URxvt.color253: #ff8800
! URxvt.color254: #ff9900
! URxvt.color255: #ffcc00

!send the following inner command to urxvt when pressing Ctrl+Shift+f
!see the list of available terminal commands at man 7 urxvt
!URxvt.keysym.C-S-F: command:\033]50;xft:Dejavu Sans Mono:size=12\007

